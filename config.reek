IrresponsibleModule:
  enabled: false
UtilityFunction:
  public_methods_only: true
TooManyStatements:
  max_statements: 10
UtilityFunction:
  exclude:
    - !ruby/regexp /Helper/
TooManyInstanceVariables:
  max_instance_variables: 6

### Excluding directories

# Directories below will not be scanned at all
exclude_paths:
  - vendor
  - db
  - spec
  - features
