= within_patient_layout(title: t(".#{session.state}.title") ) do
  = render "session_nav", session: session

  .document.hd-session-form
    = simple_form_for session,
        as: :hd_session,
        url: patient_hd_sessions_path(@patient),
        wrapper: "horizontal_form" do |f|

      = render "renalware/hd/sessions/#{session.state}/form",
               f: f,
               session: session,
               patient: patient,
               prescriptions_to_be_administered_on_hd: prescriptions_to_be_administered_on_hd
