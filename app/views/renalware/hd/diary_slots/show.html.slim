/ This is the create alert modal dialog content
h2= slot.patient

p.which-diary= slot.description
p= slot.class
- destroy_btn_title = slot.diary.master ? "Remove" : "Remove and revert to master diary"
= link_to destroy_btn_title,
          hd_diary_slot_path(slot.diary, slot),
          method: :delete,
          remote: true,
          class: :button

h2 Replace with another patient

= simple_form_for(slot, url: hd_diary_slot_path(slot.diary, slot), remote: true) do |f|

  =f.input :patient_id, label: "Patient (for now just the id but would be a list here)"
  =f.submit "Save", class: :button
  =link_to "Cancel",
           "#",
           "aria-label" => "Close",
           class: "reveal-modal-close button secondary right"
  br
