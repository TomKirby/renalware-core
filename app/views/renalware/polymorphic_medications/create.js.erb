<% if @medication.valid? %>
  $("#medications").html("<%= escape_javascript(
    render "table", treatable: @treatable, medications: @treatable.medications
  ) %>");

<% else %>
  $("<%= dom_id(@medication, "#new")%>").replaceWith("<%= escape_javascript(
    render "form", medication: @medication,
      treatable: @treatable,
      url: medications_path(@treatable)
  ) %>");

<% end %>
