  = simple_form_for event,
      url: patient_investigation_path(patient, event),
      as: :events_event,
      html: { autocomplete: "off" },
      wrapper: "horizontal_form" do |f|

    = render "renalware/events/events/form",
             event: event,
             patient: patient,
             event_types: event_types,
             f: f
