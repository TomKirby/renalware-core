ruby:
  post_path = patient_transplants_registration_statuses_path(@registration.patient)
  @status ||= @registration.statuses.build(
    description: @registration.current_status.description,
    started_on: Time.zone.today
  )

= simple_form_for @status, url: post_path, wrapper: "inline_form", remote: true do |f|
    = f.input :description_id,
      collection: Renalware::Transplants::RegistrationStatusDescription.ordered,
      label_method: :name, value_method: :id, include_blank: false,
      label: false
    = f.input :started_on, as: :date_picker, label: false
    = f.submit "Add status", class: 'button tiny'
