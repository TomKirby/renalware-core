  drug_select_partials = Hash.new("default").tap do |h|
    h["Renalware::PeritonitisEpisode"] = "peritonitis_episode"
    h["Renalware::ExitSiteInfection"] = "exit_site_infection"
  end

= simple_form_for prescription, url: url, html: { class: "prescription-form" },
    remote: true, wrapper: :horizontal_form do |f|

  .med-form.content id=("edit-meds-#{f.object.id}" )
    = render "renalware/prescriptions/drug_select/#{drug_select_partials[f.object.treatable_type]}_fields", f: f

    = hidden_field_tag :treatable_type, treatable.class.name
    = f.input :dose
    = f.association :medication_route, collection: medication_routes,
        label_method: :code, prompt: :translate
    = f.input :route_description
    = f.input :frequency
    = f.input :notes
    = f.input :prescribed_on, as: :date_picker
    = f.input :terminated_on, as: :date_picker
    = f.input :provider, collection: provider_codes, as: :radio_buttons,
        label_method: :to_label, checked: provider_codes.first

  .row
    .large-offset-3.large-7.columns
      = f.button :submit, "Save", class: :tiny
      span= " or "
      = link_to "cancel", patient_prescriptions_path(patient, treatable), remote: true
