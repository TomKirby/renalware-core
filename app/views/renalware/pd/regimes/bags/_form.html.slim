= rb.hidden_field :regime_id

.row
  .large-5.columns.inline
    = rb.label :bag_type_id, "Bag Type"
    = rb.select :bag_type_id, Renalware::PD::BagType.all.map { |bt| [bt.full_description, bt.id] }, { prompt: "Select bag type" }

  .large-3.columns.inline
    = rb.label :volume, "Volume (ml)"
    = rb.select :volume, Renalware::PD::BagVolume.values, { prompt: "Select volume" }, class: "pd-regime-bag-volume-select"

  .large-2.columns
    .right
      = rb.submit "Remove", name: "actions[remove][#{rb.index}]", class: "right remove-bag"
      = rb.link_to_remove "Remove", class: "remove-bag hide"

.row.bag-days
  .large-12.columns class="#{highlight_days_invalid(rb.object)}"
    div.title
      label Days to be administered:
      a.deselect-bag-days(href="#") Deselect all
    div
      = rb.check_box :sunday, class: "inline"
      = rb.label :sunday
      = rb.check_box :monday, class: "inline"
      = rb.label :monday
      = rb.check_box :tuesday, class: "inline"
      = rb.label :tuesday
      = rb.check_box :wednesday, class: "inline"
      = rb.label :wednesday
      = rb.check_box :thursday, class: "inline"
      = rb.label :thursday
      = rb.check_box :friday, class: "inline"
      = rb.label :friday
      = rb.check_box :saturday, class: "inline"
      = rb.label :saturday
