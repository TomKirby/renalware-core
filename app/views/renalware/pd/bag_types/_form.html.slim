.row
  = render "header"
  = render "renalware/shared/errors", model: @bag_type

.row
  .large-6.columns
    = simple_form_for @bag_type do |f|
      = f.input :id, as: :hidden unless f.object.new_record?

      = f.input :manufacturer,
          collection: manufacturer_options,
          prompt: "Please select from options",
          input_html: { class: "manufacturer-select" }

      = f.input :description

      = f.input :glucose_content,
          label: "Glucose content (g/l)"

      ul.no-bullet
        li
          = f.input :amino_acid, as: :boolean,
              label: "Contains amino acid soln?"
        li
          = f.input :icodextrin, as: :boolean,
              label: "Contains icodextrin soln?"

        li
          = f.input :low_glucose_degradation, as: :boolean,
              label: "Low glucose degradation product (GDP)"

        li
          = f.input :low_sodium, as: :boolean,
              label: "Low sodium solution"

      = f.input :sodium_content, label: "Sodium content (mmole/l)"

      = f.input :lactate_content, label: "Lactate content (mmole/l)"

      = f.input :bicarbonate_content, label: "Bicarbonate content (mmole/l)"

      = f.input :calcium_content, label: "Calcium content (mmole/l)"

      = f.input :magnesium_content, label: "Magnesium content (mmole/l)"

      = f.button :submit
      span= " or "
      = link_to "Cancel", pd_bag_types_path
