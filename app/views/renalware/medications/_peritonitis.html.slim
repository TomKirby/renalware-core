.select-peritonitis-drug
  = pm.label :medicatable_id, "Select Drug (peritonitis drugs only)"
  = pm.collection_select :medicatable_id, Renalware::Drugs::Drug.peritonitis, :id, :name, { prompt: "Please select drug used to treat this episode of peritonitis" }, class: "peritonitis-drug-select"

  = pm.hidden_field :medicatable_type, value: "Renalware::Drugs::Drug", class: "selected-medicatable-type"
