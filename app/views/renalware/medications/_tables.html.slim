b Current
= render "renalware/medications/table",
      id: "current-medications",
      patient: patient,
      treatable: treatable,
      medications: current_medications,
      search: current_search,
      include_terminated_column: false
hr
- if defined? historical_medications
  b Historical
  = render "renalware/medications/table",
      id: "historical-medications",
      patient: patient,
      treatable: treatable,
      medications: historical_medications,
      search: historical_medications_search,
      include_terminated_column: true
.right
  = link_to "Add Medication", new_patient_medication_path(patient, treatable), remote: true, class: %i(button tiny)
