<% if @medication.valid? %>
  $("#medications").html("<%= escape_javascript(
    render "table", patient: @patient, treatable: @treatable, medications: @treatable.medications
  ) %>");

<% else %>
  $("<%= dom_id(@medication, "#edit")%>").replaceWith("<%= escape_javascript(
    render "form", patient: @patient, medication: @medication,
      url: patient_medication_path(@patient, @medication)
   ) %>");
  initDatepickersIn("#medications");

<% end %>
