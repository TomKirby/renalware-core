= simple_form_for contact,
    url: patient_letters_contacts_path(patient),
    wrapper: "horizontal_form",
    remote: true do |f|
  h2= t(".title")
  = render partial: "renalware/shared/errors", locals: {model: contact}
  = render "renalware/letters/contacts/form", f: f

  =f.submit t(".save"), class: :button
  span= " or "
  =link_to t(".cancel"),
           "#",
           "aria-label" => "Close",
           class: "reveal-modal-close"
