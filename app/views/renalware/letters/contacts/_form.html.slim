= label_tag "person_auto_complete",
    f.object.class.human_attribute_name(:person),
    class: "right inline"
= text_field_tag "person_auto_complete", \
    f.object.person.try!(:to_s),
    data: { \
      autocomplete_source: search_directory_people_path, \
      autocomplete_rel: "[name='letters_contact[person_id]']" \
    },
    autofocus: true,
    spellcheck: false,
    placeholder: t(".person_auto_complete.prompt")
= f.input :person_id, as: :hidden
= f.input :default_cc
