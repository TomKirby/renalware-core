= render "header"

= render partial: "renalware/shared/errors", locals: { model: @drug }

.row
  .large-6.columns
    = form_for @drug, as: :drug, method: :put, url: drug_path(@drug) do |f|
      = render partial: "renalware/drugs/form", locals: { f: f }

      .row.button-padding
        = submit_tag "Update", class: "button"
        span= " or "
        = link_to "cancel", drugs_path
