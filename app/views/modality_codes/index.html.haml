.row
  %h4 Manage Modalities

.row
  = link_to "Add A New Modality", new_modality_code_path, :class => "button tiny"

.row
  .small-12.large-6.columns
    %ul.no-bullet.stripy-list
      - @modal_codes.each do |m|
        %li.row
          .small-4.large-4.columns
            = m.name
          .small-4.large-4.columns
            = m.code
          .small-4.large-2.columns
            = link_to "Edit", "#"
          .small-4.large-2.columns
            = link_to "Delete", "#"

  