.row
  %h4 Existing Drugs List

.row
  = link_to "Add New Drug", new_drug_path, :class => "button tiny"

.row

  .small-12.large-6.columns.find-drug-list.left
    = label_tag :drug_search, "Drug"
    = search_field_tag :drug_search, nil, :placeholder => 'Search drug by name or type'


    %ul#drug-results.no-bullet.stripy-list

  .small-12.large-6.columns.right
    %ul.no-bullet.stripy-list
      - @drugs.each do |t|
        %li.row
          .small-4.large-4.columns
            = link_to "#{t.name}", drug_drug_drug_types_path("#{t.id}", @drug_drug_types), title: "Edit drug categories/types"
          .small-4.large-2.columns
            = link_to "Edit", edit_drug_path(t.id)
          .small-4.large-2.columns
            = link_to "Delete", drug_path(t.id), id: "#{t.id}-drug", method: :delete, :class => "delete", data: { confirm: "Are you sure you want to delete this drug?"}

