.row
  %h3 Manage users

.row
  = link_to 'All Users', action: 'index'
  |
  = link_to 'Awaiting approval', action: 'index', approved: 'false'

.row
  %table
    %thead
      %th Email
      %th Approved
      %th{width: '8%'}

    %tbody
      - @users.each do |user|
        %tr
          %td= user.email
          %td= user.approved?
          %td= link_to 'Edit', edit_admin_user_path(user), class: 'button tiny save'
