.wide-screen
  .columns.large-12
    = render partial: "patients/patient_info_header", locals: { model: @patient }
    = render partial: "patients/mini_renal_profile", locals: { model: @patient }

    h5 Clinic Visits

    table.clinics.responsive
      thead
        tr
          th
            | Date
          th
            | BMI
          th
            | BP
          th.g-center
            | Actions

      tbody
        = render @clinic_visits

.row
  = link_to 'Add Clinic Visit', new_patient_clinic_visit_path(@patient), class: 'button tiny save'
