%thead
  %th
    Problem
  %th
    Date
  %th
    Entered By

%tbody
  - @patient.problems.each do |p|   
    %tr{:class => "problem"}
      %td{:data => { :heading => "Problem" }}
        = p.description 
      %td{:data => { :heading => "Date" }}
        = p.created_at.strftime("%d/%m/%Y")
      %td{:data => { :heading => "Date" }}
        = p.user_id
      
      