.row
  %h5
    Set Patient Modality

.row
  %ul.no-bullet
    = form_for @patient do |f|
      
      = hidden_field_tag :redirect_url, clinical_summary_patient_path(@patient)
      
      = f.fields_for :patient_modality, @patient_modality do |m| 
        
        = render :partial => 'modality_form', :locals => { :m => m }
          
      = f.submit "Save Modality", :class => "button tiny right save mt"

  = link_to "Cancel", clinical_summary_patient_path(@patient), class: "button tiny left cancel mt"
                   
.clinical-summary
  = content_for :secondary_nav do  
    = render partial: "patients/clin_sum_sub_nav", locals: { model: @patient }

 
