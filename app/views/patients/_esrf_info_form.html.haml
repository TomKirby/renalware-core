.esrf-info-form
  = esrf.hidden_field :id

  = esrf.hidden_field :patient_id

  %li
    = esrf.label :date, "Date"
    = esrf.date_select(:date, {start_year: (10.years.ago).year, end_year: Time.now.year, order: [:day, :month, :year]}, class: "datetime")

  %li
    = esrf.label :prd_code_id, "Primary Renal Diagnosis (PRD)"
    = esrf.collection_select :prd_code_id, PrdCode.all, :id, :term, { :prompt => "Please select primary renal diagnosis", include_blank: true }, :class => "prd-select"
