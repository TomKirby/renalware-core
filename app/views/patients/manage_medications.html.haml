.wide-screen
  .columns.large-12
    = render partial: "patients/patient_info_header", locals: { model: @patient }
    = render partial: "patients/mini_renal_profile", locals: { model: @patient }

    %h5 Patient Medications

.wide-screen
  = form_for @patient do |f|

    = hidden_field_tag :redirect_url, manage_medications_patient_path(@patient)

    = f.fields_for :medications, @patient.active_medications do |pm|

      = render partial: 'medications/new', locals: { pm: pm } if pm.object.new_record?

      = render partial: 'medications/medication', locals: { pm: pm } unless pm.object.new_record?

    - unless current_user.read_only?
      = f.submit 'Save Medication', class: 'button tiny right save mt'
