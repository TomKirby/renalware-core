%table.responsive.pd-regimes
  %thead
    %tr
      %th.col-width-date
        Regime Start Date
      %th.col-width-date
        Regime End Date
      %th.col-width-13
        Treatment
      %th
        Regime Bags
      %th.column-6-width
        On HD
      %th.column-6-width
        Last Updated
      %th.col-width-9
        Actions

  %tbody
    - @patient.pd_regimes.each do |r|
      %tr{ valign: "top" }

        %td{ :data => { :heading => "Start Date" }, valign: "top" }
          = r.start_date

        %td{ :data => { :heading => "End Date" }, valign: "top" }
          = default_for_blank(r.end_date, "Pending")

        %td{ :data => { :heading => "Treatment" }, valign: "top" }
          = r.treatment

        %td{ :data => { :heading => "Regime Bags" }, valign: "top" }
          = pd_regime_bags(r.pd_regime_bags)

        %td{ :data => { :heading => "On HD" } }
          = yes_no(r.add_hd)

        %td{ :data => { :heading => "Last Updated" } }
          = r.updated_at

        %td{ :data => { :heading => "Actions" } }
          %ul.table-data-list
            - unless current_user.read_only?
              %li
                = link_to "Update", edit_patient_pd_regime_path(@patient, r.id), class: "update-pd-regime"
              %li
                = link_to "View Regime", patient_pd_regime_path(@patient, r.id), class: "view-pd-regime"



