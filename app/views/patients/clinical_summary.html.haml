.row.g-center
  %h5= "Clinical Summary for #{@patient.full_name} - KCH: #{@patient.local_patient_id}, Age: #{@patient.age}, Sex: #{I18n.t("enums.gender.#{@patient.sex}")}, DoB: #{@patient.dob}, Modal: "

.clinical-summary
  .columns.large-6.small-6
    %table.responsive
      %caption
        = link_to "Problems", "#"

        = render partial: "patients/problems"

.clinical-summary
  .columns.large-6.small-6
    %table.responsive
      %caption
        = link_to "All Current Medications", medications_index_patient_path(@patient)

        = render partial: "patients/medications", locals: { model: @patient.patient_medications }

.clinical-summary
  .columns.large-12.small-12
    %table.responsive
      %caption
        = link_to "All Patient Events", patient_patient_events_path(@patient)

      %thead
        %th
          Added
        %th
          Event Type
        %th.table-description
          Description
        %th
          User

      %tbody
        - @patient.patient_events.each do |event|
          %tr
            %td{:data => { :heading => "Added" }}
              = event.created_at
            %td{:data => { :heading => "Event Type"}}
              = event.patient_event_type.name
            %td{:data => { :heading => "Description"}}
              %dl.accordion{data: {accordion: true} }
                %dd.accordion-navigation
                  %a.fi-plus.fi-minus.toggle-notes{:id => "patient-event-notes-#{event.id}", href: "#patient-event-notes-#{event.id}"}
                    = event.description
                  .content.toggle-content{:id => "patient-event-notes-#{event.id}"}  
                    = event.notes
            %td{:data => { :heading => "User"}}
              / TODO
          
.clinical-summary
  = content_for :secondary_nav do
    %dd.remove-name.patient-name
      = link_to "#{@patient.full_name}", clinical_summary_patient_path(@patient)
    %dd
      = link_to "Demographics", demographics_patient_path(@patient)
    %dd
      = link_to "Problems", "#"
    %dd
      = link_to "Meds", medications_patient_path(@patient)
    %dd
      = link_to "Events", patient_patient_events_path(@patient)



