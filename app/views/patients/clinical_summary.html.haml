.row
  %h1= "Clinical Summary for #{@patient.full_name}"

  .columns.large-12.small-12
    %table.responsive
      %caption
        = link_to "All Patient Events", patient_events_path

      %thead
        %th
          Added
        %th
          Event Type
        %th
          Description
        %th
          User

      %tbody
        - @patient_events.each do |event|
          %tr
            %td{:data => { :heading => "Added" }}
              = event.created_at
            %td{:data => { :heading => "Event Type"}}
              = event.patient_event_type.name
            %td{:data => { :heading => "Description"}}
              = event.description
            %td{:data => { :heading => "User"}}
              / TODO

    .g-center
      = link_to "Add New Event For #{@patient.full_name}", new_patient_event_path, :class => 'button tiny'

.columns.large-12.small-12
  %table.responsive
    %caption
      = link_to "All Patient Medication ", "#"

    %thead
      %th
        Medication
      %th
        Dose
      %th
        Route
      %th
        frequency
      %th
        Prescribed On

    %tbody
      - @patient_medications.each do |p|
        %tr
          %td{:data => { :heading => "Medication" }}
            = p.medication.name
          %td{:data => { :heading => "Dose"}}
            = p.dose
          %td{:data => { :heading => "Route"}}
            = p.route
          %td{:data => { :heading => "Frequency"}}
            = p.frequency
          %td{:data => { :heading => "Prescribed On"}}
            = p.date
          
  .g-center
    = link_to "Add new medication for #{@patient.full_name}", medications_patient_path(@patient), :class => 'button tiny'

.row
  = content_for :secondary_nav do

    %dd
      = link_to "Back to Patient List", patients_path
    %dd
      = link_to "Add a Patient Event", new_patient_event_path
    %dd
      = link_to "Add a Medication", medications_patient_path(@patient)



