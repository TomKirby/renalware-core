.row
  %h1 Clinical Summary

  %h2= "#{@patient.forename} #{@patient.surname}"

.row
  = field_set_tag do
    %legend
      = link_to "Patient Events", patient_events_path
    %ul.no-bullet
      - @patient_events.each do |e|
        = render partial: "patient_events/patient_event", locals: { e: e }

.row
  = content_for :secondary_nav do
    %li
      = link_to "Back to Patient List", patients_path
    %li
      = link_to "Add a Patient Event", new_patient_event_path


