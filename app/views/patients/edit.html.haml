.main-content
  .row.g-center
    = render partial: "patients/patient_info_header", locals: { model: @patient }
  
  .row
    = render partial: "patients/mini_renal_profile", locals: { model: @patient }

.row
  %h5 
    = "Update Patient Demographics #{@patient.full_name}"
    
.row
  .large-12.columns

    = form_for @patient, :method => :put do |f|

      = hidden_field_tag :redirect_url, demographics_patient_path(@patient)

      = render partial: "patients/demographic_form", locals: { patient: f }

      = submit_tag "Update Demographics", class: "button tiny right"
      
      = link_to "Cancel", demographics_patient_path(@patient), class: "button tiny left cancel"

.wide-screen
  = content_for :secondary_nav do  
    = render partial: "patients/clin_sum_sub_nav", locals: { model: @patient }

