%tr
  %td.g-center{ :data => { :heading => "Actions"}}
    = link_to "Demographics", demographics_patient_path(patient)
  %td{ :data => { :heading => "Forename"}}
    = link_to patient.full_name, clinical_summary_patient_path(patient)
  %td{ :data => { :heading => "NHS No."}}
    = patient.nhs_number
  %td{ :data => { :heading => "Hospital No."}}
    = patient.local_patient_id
  %td{ :data => { :heading => "Sex"}}
    = I18n.t("enums.gender.#{patient.sex}")
  %td{ :data => { :heading => "DoB"}}
    = patient.dob
  %td{ :data => { :heading => "Age"}}
    = patient.age


