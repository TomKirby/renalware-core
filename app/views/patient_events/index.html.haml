.row
  %h5= link_to "Patient Events", patient_patient_events_path(@patient)

  %table.responsive
    %caption
      = link_to "All Patient Events", patient_patient_events_path(@patient)

    %thead
      %th
        Added
      %th
        Event Type
      %th
        User
      %th
        Modal
      %th
        Description
      %th
        Date
      %th
        Time
      %th
        Entered By

    %tbody
      = render @patient_events

.clinical-summary
  = content_for :secondary_nav do  
    = render partial: "patients/clin_sum_sub_nav", locals: { model: @patient }

