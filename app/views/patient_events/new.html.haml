.wide-screen
  .columns.large-12
    = render partial: "patients/patient_info_header", locals: { model: @patient }
    = render partial: "patients/mini_renal_profile", locals: { model: @patient }

.row
  %h5
    = link_to "Add a New Patient Event", new_patient_patient_event_path
 
= render partial: "shared/errors", locals: { model: @patient_event }

= form_for [@patient, @patient_event], :method => :post do |f|

  .row
    =field_set_tag do
      %ul.no-bullet
        .large-6.columns
          = f.label :date_time, "Patient Event Date/Time"
          = f.datetime_select(:date_time, { start_year: (5.years.ago).year, end_year: Time.now.year, order: [:day, :month, :year]}, class: "datetime")

          %li
            = f.label :patient_event_type_id, "Patient Event Type"
            = f.collection_select(:patient_event_type_id, PatientEventType.all, :id, :name )

          %li
            = f.label :description, "Description"
            = f.text_field :description
        
        .large-6.columns 
          %li
            = f.label :notes, "Notes"
            = f.text_area(:notes, :cols => 50, :rows => 11)
        .row
          = link_to "Cancel", clinical_summary_patient_path(@patient), class: "button tiny left cancel"

          = submit_tag "Save Patient Event", class: "button tiny right save"

.wide-screen
  = content_for :secondary_nav do  
    = render partial: "patients/clin_sum_sub_nav", locals: { model: @patient }

            