.main-content
  .row.g-center
    = render partial: "patients/patient_info_header", locals: { model: @patient }

  .row
    = render partial: "patients/mini_renal_profile", locals: { model: @patient }

.row
  %h5
    = "Exit Site Infection Details - Diagnosed: #{@exit_site_infection.diagnosis_date}"

.row
  .large-12.columns
    = field_set_tag do
      %legend.title-bold
        = "Last Updated: #{@exit_site_infection.updated_at}"

      .large-6.columns

        .row
          .large-12.columns
            .section-underliner.title-bold
              Outcome:

            %p
              = default_for_blank(@exit_site_infection.outcome, "Unknown")

          .large-12.columns
            .section-underliner.title-bold
              Organisms/Sensitivity:
            .large-12.columns
              %ul.table-data-list
                = organisms_and_sensitivities(@exit_site_infection.infection_organisms)

      .large-6.columns
        .row
          .large-12.columns
            .section-underliner.title-bold
              Treatment:
            %p
              = default_for_blank(@exit_site_infection.treatment, "Unknown")

          .large-12.columns
            .section-underliner.title-bold
              Antibiotics/Routes:
            .large-12.columns
              %ul.table-data-list
                = medication_and_route(@exit_site_infection.medications)
          .large-12.columns
            .section-underliner.title-bold
              Exit Site Infection Notes:
            %p
              = @exit_site_infection.notes

      .large-12.columns.button-padding
        = link_to "Edit", edit_patient_exit_site_infection_path(@patient, @exit_site_infection.id), class: "tiny button right"

        = link_to "Return to PD info", pd_info_patient_path(@patient), class: "button tiny left cancel"


.wide-screen
  = content_for :secondary_nav do
    = render partial: "patients/clin_sum_sub_nav", locals: { model: @patient }

