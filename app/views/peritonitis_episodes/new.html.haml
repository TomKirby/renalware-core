.wide-screen
  .columns.large-12
    = render partial: "patients/patient_info_header", locals: { model: @patient }
    = render partial: "patients/mini_renal_profile", locals: { model: @patient }

.row
  %h4
    Record an Episode of Peritonitis

  .large-12.columns
    = render partial: "shared/errors", locals: { model: @peritonitis_episode }

.row
  %ul.no-bullet
    = field_set_tag do

      = form_for [@patient, @peritonitis_episode] do |p|

        .row
          = render :partial => 'peritonitis_episodes/form', :locals => { :p => p }

        = link_to "Cancel", pd_info_patient_path(@patient), class: "button tiny left cancel mt"

        = p.submit "Save Peritonitis Episode", :class => "button tiny right save mt"
